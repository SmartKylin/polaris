/* global variables
 ======================================== */

color-20a0ff = #20a0ff // 蓝色
color-fd6322 = #fd6322 // 黄色
color-8492a6 = #8492a6 // 浅黑
color-13ce66 = #13ce66 // 绿色



/* flexbox
 ======================================== */

.flex {
  display: flex;
}

for num in 1 2 3 4 5 6
  .flex-{num}
    flex: num

/* 垂直居中 */
.vertical-center {
  align-items: center;
}

/* gutter
 ======================================== */

for num in 5 10 15 20 25 30 35 40
  // margin top
  .mt{num}
    margin-top: num px
  // margin right
  .mr{num}
    margin-right: num px
  // margin botom
  .mb{num}
    margin-bottom: num px
  // margin left
  .ml{num}
    margin-left: num px
  // padding top
  .pt{num}
    padding-top: num px
  // padding right
  .pr{num}
    padding-right: num px
  // padding bottom
  .pb{num}
    padding-bottom: num px
  // padding left
  .pl{num}
    padding-left: num px



 /* font color
 ======================================== */

 /* 蓝色 */
.color-20a0ff {
  color: color-20a0ff;
}
/* 黄色 */
.color-fd6322 {
  color: color-fd6322;
}
/* 浅灰 */
.color-8492a6 {
  color: color-8492a6;
}
/* 绿色 */
.color-13ce66 {
  color: color-13ce66;
}



/* clear
 ======================================== */

.clear-gap {
  font-size: 0;
}



/**
 * 分割线
 */

.dividing-line {
  display: inline-block;
  width: 1px;
  min-height: .9em;
  background-color: #e0e0e0;
}
