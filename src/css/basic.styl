  /* 蓝色 */
  .color-blue {
    color: color-blue;
  }
  /* 黄色 */
  .color-orange {
    color: color-orange;
  }
  /* 浅灰 */
  .color-gray {
    color: color-gray;
  }
  /* 绿色 */
  .color-green {
    color: color-green;
  }
  /* 红色 */
  .color-red {
    color: color-red;
  }
}

/* 提高优先级 */
body {
  .bg-blue {
    background-color: color-blue;
  }

  .bg-orange {
    background-color: color-orange;
  }

  .bg-gray {
    background-color: color-gray;
  }

  .bg-green {
    background-color: color-green;
  }

  .bg-red {
    background-color: color-red;
  }
