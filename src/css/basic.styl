/* clear
 ======================================== */

.clear-gap {
  font-size: 0;
}

/**
 * 分割线
 */

.dividing-line {
  display: inline-block;
  width: 1px;
  min-height: .9em;
  background-color: #e0e0e0;
}
  /**
   * 阴影
   */
.box-shadow {
  box-shadow: 0 2px 5px 0 rgba(0, 0, 0, .2);
}

  /**
   * 下边框
   */
.border-bottom {
  border-bottom: 1px solid #e0e0e0
}

/**
 * 按钮
 */
.tentacle--btn {
  display: inline-block;
  min-width: 50px;
  margin-left: 10px;
  padding: 6px 10px;
  border-radius: 2px;
  text-align: center;
  color: #fff;
  background-color: #20A0FF;
  float: right
}
 /**
  * 进度环
  */
.view--rate {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin: 10px;
  text-align: center;
  line-height: 100px;
  font-size: 16px;
  color: #fff;
  background-color: #13CE66;
}
