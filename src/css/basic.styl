/* global variables
 ======================================== */

color-blue = #20a0ff // 蓝色
color-orange = #fd6322 // 黄色
color-gray = #8492a6 // 浅黑
color-green = #13ce66 // 绿色
color-red = #FF4949 // 红色
color-lime = #c2d352

/* flexbox
 ======================================== */

.flex {
  display: flex;
}

for num in 1 2 3 4 5 6
  .flex-{num}
    flex: num

/* 垂直居中 */
.vertical-center {
  align-items: center;
}

/* 水平垂直居中 */
.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* gutter
 ======================================== */

for num in 5 10 15 20 25 30 35 40 50 60
  // margin top
  .mt{num}
    margin-top: num px
  // margin right
  .mr{num}
    margin-right: num px
  // margin botom
  .mb{num}
    margin-bottom: num px
  // margin left
  .ml{num}
    margin-left: num px
  // padding
  .pd{num}
    padding: num px
  // padding top
  .pt{num}
    padding-top: num px
  // padding right
  .pr{num}
    padding-right: num px
  // padding bottom
  .pb{num}
    padding-bottom: num px
  // padding left
  .pl{num}
    padding-left: num px

/* font size
======================================== */
for num in 12 14 16 18 24 26 30
  .font-{num}
    font-size: num px

/* font color
======================================== */

/* 提高优先级 */
