.loginView {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  padding: 0 15px;
  background-color: #fff;
}

.loginView--logo {
  padding: 60px 0;
  text-align: center;
}

.loginView--ipt {
  height: 20px;
  padding: 8px 5px;
  font-size: 0;
  background-color: #f5f5f5;

  > input {
    width: 100%;
    height: 20px;
    background-color: inherit;
  }
}

.loginView--sms {
  display: flex;
  padding-top: 10px;

  .loginView--ipt {
    flex: 1;
  }
}

.loginView--sms--btn {
  width: 100px;
  margin-left: 8px;
  font-size: 14px;
  text-align: center;
  line-height: 36px;
  color: #fff;
  background-color: #dc4f45;
  &.disabled {
    background-color: #ccc;
  }
}

.loginView--btn {
  height: 40px;
  margin: 50px auto 10px;
  line-height: 40px;
  text-align: center;
  font-size: 14px;
  color: #fff;
  background-color: #dc4f45;
}

.loginView--notice {
  text-align: center;
  font-size: 12px;
  color: #999;
}



