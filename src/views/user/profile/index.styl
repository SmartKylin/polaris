.profile--account {
  position: relative;
  display: flex;
  align-items: center;
  margin-bottom: 20px;
  padding: 15px;
  background-color: #fff;
}

.profile--username {
  padding-bottom: 20px;
  font-size: 15px;
  line-height: 1;
  color: #000;
}

.profile--avatar {
  width: 60px;
  height: 60px;
  margin-right: 15px;
  border-radius: 50%;
  background-color: pink;
}

.profile--mobile-and-code {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  line-height: 1;
  color: #888;
}
