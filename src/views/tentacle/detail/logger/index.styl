.tentacleDetail--tab {
  display: flex;
  background-color: #fff;
}
.tentacleDetail--tabItem {
  flex: 1;
  text-align: center;
  padding: 10px 5px;
  box-sizing: border-box;
}

.tentacleDetail--tabItem--name {
  font-size: 12px;
  color: #8492A6;
}

.tentacleDetail--tabItem.active {
  background-color: #f5f5f5;
  .tentacleDetail--tabItem--name {
    color: red;
  }
}
