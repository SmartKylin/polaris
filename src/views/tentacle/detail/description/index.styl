.descrip--title {
  width 100%
  padding 5px
  box-sizing border-box
  background-color: #EFF2F7;
  text-align center
}

.descrip--bd {
  background #fff;
  padding: 5px 15px;
  > div {
    margin 5px 0;
    span {
      font-size: 12px
      text-align center
      display inline-block
      width 50px
      background #ccc
      margin 0 5px;
      padding 4px 0;
      &.active {
        background: yellow
      }
    }
  }
}

