.descrip--title {
  width 100%
  padding 5px
  box-sizing border-box
  background-color: #EFF2F7;
  text-align center
}

.descrip--bd {
  background #fff;
  padding: 5px 10px;
  > div {
    margin 10px 0;
    span {
      font-size: 12px
      text-align center
      display inline-block
      width 50px
      background #e0e0e0
      margin 0 5px;
      padding 5px;
      &.active {
        background #c2d352
        color: #fff
      }
    }
  }
}

.text--wrap {
  padding: 20px;
  background: #fff
}

