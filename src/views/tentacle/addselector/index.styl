.selector--title {
  text-align: center;
  font-size: 18px;
  height: 50px;
  line-height: 50px;
  font-weight: bold;
  margin-bottom: 10px;
}

.sel--main--img {
  width: 100px;
  height: 100px;
}

.sel--main--item {
  color: #353535;
  height: 140px;
  align-items: center;
  justify-content: space-around;
}

.header--failed {
  background-color: #fff;
  margin-bottom: 10px;
  text-align: center;
  padding-bottom: 30px;
  .failed--tip {
    color: #ff4d5e;
    font-size: 15px;
    margin-top: 10px;
    height: 50px;
    line-height: 50px;
  }
  .method--tip {
    font-size: 12px;
    color: #333;
  }
}

.main--img {
  text-align: center;
  > img {
    width: 300px;
    height: 250px;
    border: 2px solid #2b8ff7;
  }
}

.footer--failed {
  display: flex;
  justify-content: space-between;
  padding: 0 15px;
}

.select--header {
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-direction: column;
}
.header--identifying {
  font-size: 16px;
  color: #2b8ff7;
  text-align: center;
  line-height: 50px;
  height: 50px;
}

.progress--box {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  color: #fff;
  background: #2b8ff7;
  line-height: 60px;
  text-align: center;
  margin-bottom: 30px;
}