blue = #20A0FF
green = #13CE66
red = #ff6f8c
orange = #F7BA2A
black = #1F2D3D
border(color)
  border 4px solid color
  border-radius 50%

.index--search {
  margin: 30px;
  height: 30px;
  border-radius: 8px;
  > input {
    width: 100%;
    height: 100%;
  }
}

.index--count {
  display: flex;
  padding: 10px;
  width: 100%;
  box-sizing: border-box;
  justify-content:space-between;
  text-align: center;


  .index--active {
    border(orange)
  }
  .index--contract {
    border(blue)
  }
  .index--order {
    border(green)
  }
}
.index--total {
  border(black)
}
.count--inner {
  font-size: 12px;
  margin: 5px;
  padding 10px
  .index--num {
    font-size: 18px;
  }

}
.index--overview {
  display: flex;
  width: 100%;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content:space-between;
  padding: 10px;
  box-sizing: border-box;

}
.index--wrap {
  width:46%;
  margin: 5px;
  height: 80px;
  border-radius: 10px;
  background: #fff;
  text-align: center;
  line-height: 20px;
  font-size: 14px;
  > a {
    text-decoration: none;
    color: #000;
  }
}
.danger {
  background: red
}
.success {
  background green
}
.warning {
  background orange
}
.blue {
  background blue
}
.index--label {
  color: #fff;
  font-size:12px;
}

.tentacleView--top {
  display: flex;
  padding: 15px;
  background-color: #20A0FF;
}
.tentacleView--search {
  flex: 1;
  display: flex;
  padding: 0 5px;
  align-items: center;
  border-radius: 3px;
  overflow: hidden;
  background-color: #fff;
  background-size: 20px;
  background-position: 2px center;
  background-repeat: no-repeat;
  background-image: url(../../../images/icon-search.svg);
}

.tentacleView--search--ipt {
  width: 100%;
  height: 20px;
  padding-top: 1px;
  padding-left: 20px;
  line-height: 20px;
  font-size: 12px;
  color: #353535;
  background-color: transparent;
}
.tentacleView--add {
  position: relative;
  width: 30px;
  height: 30px;
  margin-left: 10px;
  &:before {
    content: "";
    position: absolute;
    top: 50%;
    left: 2px;
    width: 26px;
    height: 4px;
    margin-top: -2px;
    border-radius: 1px;
    background-color: #fff;
  }
  &:after {
    content: "";
    position: absolute;
    top: 2px;
    left: 50%;
    width: 4px;
    height: 26px;
    margin-left: -2px;
    border-radius: 1px;
    background-color: #fff;
  }
}




