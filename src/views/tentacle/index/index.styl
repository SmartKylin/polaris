.index--overview {
  display: flex;
  width: 100%;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content:space-between;
  padding: 5px;
  box-sizing: border-box;
  background-color: #03ccff;
}
.index--wrap {
  width:46%;
  margin: 5px;
  box-shadow: 0 0 5px 1px rgba(0, 0, 0, .2)
  height: 80px;
  //border-radius: 10px;
  //border: 1px solid blue
  background: #fff;
  text-align: center;
  line-height: 20px;
  font-size: 14px;
  > a {
    text-decoration: none;
    color: #000;
  }
  .index--count {
    color red;
    font-size 16px;
    font-weight 500;
  }
}
.index--reply {
  color #20A0FF
//color #fff;
}
.danger {
  background: red
}
