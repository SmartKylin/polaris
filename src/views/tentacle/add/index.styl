@import "../../../css/basic.styl"
.detail--group {
  display flex
  justify-content space-between
  background #fff
  text-align center
  a {
    text-decoration none
    color: #000
    display block
    margin 0
    width 100%
    background #fff
    padding 10px
    font-size 14px
  }
  .router-link-active {
    color: #fff;
    background-color: #20A0FF;
  }
}

.info--title {
  font-size 14px;
  text-align center
}

.add--textarea--wrap {
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 0 15px;
  margin: 10px 0;
  font-size: 15px;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
  .add--text--area {
    outline: none;
    resize: none;
  //border: 1px solid #e0e0e0;
    border: none;
    line-height: 20px;
    font-size: 15px;
  }
  .textarea--title {
    padding-top: 15px;
  //padding-bottom: 5px;
  }
  .textarea--length {
    text-align: right;
    padding: 10px 0;
  }

}

.relasel--wrap {
  border-top: 1px solid #e5e5e5;
}

