.clueView {
  padding-top: 106px;
}

.clueView--hd {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
}

.clueView--top {
  display: flex;
  padding: 10px 15px;
  /*box-shadow: 1px 0 10px 0 rgba(0, 0, 0, .4);*/
  background-color: #20A0FF;
}

.clueView--add {
  position: relative;
  width: 30px;
  height: 30px;
  margin-left: 10px;
  &:before {
    content: "";
    position: absolute;
    top: 50%;
    left: 2px;
    width: 26px;
    height: 4px;
    margin-top: -2px;
    border-radius: 1px;
    background-color: #fff;
  }
  &:after {
    content: "";
    position: absolute;
    top: 2px;
    left: 50%;
    width: 4px;
    height: 26px;
    margin-left: -2px;
    border-radius: 1px;
    background-color: #fff;
  }
}

.clueView--search--btn {
  height: 30px;
  margin-left: 10px;
  line-height: 30px;
  font-size: 14px;
  color: #fff;
}

.clueView--search {
  flex: 1;
  display: flex;
  height: 30px;
  padding: 0 5px;
  align-items: center;
  border-radius: 3px;
  overflow: hidden;
  background-color: #fff;
  background-size: 20px;
  background-position: 2px center;
  background-repeat: no-repeat;
  background-image: url(../../../images/icon-search.svg);
}

.clueView--search--ipt {
  width: 100%;
  height: 20px;
  padding-top: 1px;
  padding-left: 20px;
  line-height: 20px;
  font-size: 12px;
  color: #353535;
  background-color: transparent;
}


.clueView--data {
  padding: 25px 0;
  text-align: center;
  background-color: #fff;
}

.clueView--data--amount {
  font-size: 30px;
  line-height: 1;
  font-weight: 700;
  color: #fd6322;
}

.clueView--data--desc {
  padding-top: 8px;
  font-size: 12px;
  line-height: 1;
  color: #fd6322;
}


.clueView--links {
  display: flex;
  padding: 6px 0;
  background-color: #F5F5F5;
  > div {
    flex: 1;
    padding: 5px 0;
    text-align: center;
    font-size: 12px;
    color: #757575;
  }
}

.clueView--links--line {
  width: 1px;
  background-color: #ccc;
}


.clueView--tabItem--cont {
  padding-bottom: 5px;
  font-size: 14px;
  color: #353535;
}

.clueView--tabItem--name {
  font-size: 12px;
  color: #8492A6;
}

.tab--item.active {
  .clueView--tabItem--cont {
    color: #fd6322;
  }
}

.clueView--listItem {
  margin-bottom: 10px;
  padding: 20px 15px;
  box-shadow: 0 2px 5px 0 rgba(0, 0, 0, .2);
  background-color: #fff;
}

.clueView--listItem:last-child {
  margin-bottom: 0;
}

.clueView--listItem--hd {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 20px;
}

.clueView--listItem--bd {
  display: flex;
  align-items: center;
  padding: 15px 0;
}

.clueView--listItem--rate {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  text-align: center;
  line-height: 60px;
  font-size: 16px;
  color: #fff;
  background-color: #13CE66;
}

.clueView--listItem--syn {
  flex: 1;
  padding-left: 15px;
  font-size: 14px;
  color: #8492A6;
  > div {
    padding: 3px 0;
  }
}

.clueView--listItem--ft {
  padding-top: 15px;
  border-top: 1px solid #e0e0e0;
  text-align: right;
  font-size: 0;
  > div {
    margin-left 10px;
  }
}

.clueView--list--sort {
  display: flex;
  justify-content: space-between;
  padding: 10px 15px;
  border-bottom: 1px solid #e0e0e0;
  background-color: #fff;
  .tab--item {
    padding: 0;
    border: 0;
  }
  .tab--item.active {
    background-color: transparent;
  }
}

.clueView--list--sortBtn {
  margin-right: 10px;
  text-decoration: underline;
  font-size: 14px;
  color: #8492a6;
}

.clueView--list--amount {
  font-size: 14px;
  color: #8492a6;
}
