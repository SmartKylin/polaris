.clueEdit--tentacle {
  padding-top: 10px;
  font-size: 12px;
  color: #8492a6;
}

.clueEdit--card {
  padding: 0 15px;
  background-color: #fff;
}

.clueEdit--card--hd {
  padding: 10px 0;
  font-size: 14px;
}

.clueEdit--order--rate,
.clueEdit--order--cost {
  flex: 1;
  text-align: center;
  color: #8492A6;
  .cont {
    padding-bottom: 20px;
    font-size: 16px;
  }
  .name {
    font-size: 12px;
    color: #8492a6;
  }
}

.required--item:before {
  content: '*';
  color: red;
  font-size: 20px;
  font-weight: bold;
}

.required--field {
  .Field--label:before {
    content: '*';
    color: red;
    font-size: 20px;
    font-weight: bold;
  }
}

.btn--large--gray {
  height: 40px;
  border-radius: 2px;
  line-height: 40px;
  text-align: center;
  font-size: 14px;
  color: #fff;
  background-color: #ccc;
}
