.loanScheme {
  background-color: #fff;
}

.loanScheme--addBtn {
  width: 50%;
  height: 30px;
  margin: 0 auto;
  border: 1px solid #20a0ff;
  border-radius: 3px;
  line-height: @height;
  font-size: 12px;
  text-align: center;
  color: #20a0ff;
}

.loanScheme--item {
  flex: 1;
}

.loanScheme--item--main {
  font-size: 14px;
}

.loanScheme--item--remark {
  padding-top: 8px;
  font-size: 12px;
  color: #8492a6;
}



.loanSchemeEditor {
  background-color: #f5f5f5;
}

.loanSchemeEditor--textarea {
  margin-top: 10px;
  padding: 10px;
  background-color: #fff;
  textarea {
    resize: none;
    outline: none;
    width: 100%;
    height: 60px;
    padding: 5px;
    border: 0;
    box-sizing: border-box;
    background-color: #f5f5f5;
  }
}
