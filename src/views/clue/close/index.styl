.clueCloseView--title {
  padding: 10px 15px;
  border-bottom: 1px solid #e0e0e0;
  font-size: 12px;
  color: #8492a6;
  background-color: #fff;
}

.clueCloseView--textarea {
  overflow: hidden;
  padding: 15px;
  font-size: 0;
  background-color: #fff;
  textarea {
    outline: none;
    resize: none;
    width: 100%;
    height: 100px;
    padding: 5px;
    box-sizing: border-box;
    border-radius: 3px;
    border: 0;
    font-size: 14px;
    background-color: #f5f5f5;
  }
}
