.tentacle--listItem {
  margin-top: 10px;
  margin-bottom: 10px;
  padding: 15px;
  box-shadow: 0 2px 5px 0 rgba(0, 0, 0, .2);
  background-color: #fff;
  .tentacle--listItem--bd {
    display: flex;
    align-items: center;
    padding: 5px 0;
    .tentacle--listItem--syn {
      flex: 1;
      padding-left: 15px;
      font-size: 14px;
      color: #8492A6;
      > div {
        padding: 3px 0;
      }
      .syn--name {
        font-size: 16px;
        color: #000;
      }
      .tentacle--listItem--contract {
        margin-top 15px;
      }
    }
  }
  .tentacle--listItem--ft {
    padding-top: 15px;
    border-top: 1px solid #e0e0e0;
    text-align: right
    .button--small {
      color: #fff
    }
  }
  .tentacleView--popup {
    background-color: #f5f5f5;
  }

}

.tentacle--listItem:last-child {
  margin-bottom: 0;
}

