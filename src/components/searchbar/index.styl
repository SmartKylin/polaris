.tentacleView--top {
  display: flex;
  padding: 10px 15px;
  background-color: #20A0FF;
  .tentacleView--search {
    flex: 1;
    display: flex;
    padding: 0 5px;
    align-items: center;
    border-radius: 3px;
    overflow: hidden;
    background-color: #fff;
    background-size: 20px;
    background-position: 2px center;
    background-repeat: no-repeat;
    background-image: url(../../images/icon-search.svg);
    .tentacleView--search--ipt {
      width: 100%;
      height: 20px;
      padding-top: 1px;
      padding-left: 20px;
      line-height: 20px;
      font-size: 12px;
      color: #353535;
      background-color: transparent;
    }

  }
  .tentacleView--add {
    position: relative;
    width: 30px;
    height: 30px;
    margin-left: 10px;
    &:before {
      content: "";
      position: absolute;
      top: 50%;
      left: 2px;
      width: 26px;
      height: 4px;
      margin-top: -2px;
      border-radius: 1px;
      background-color: #fff;
    }
    &:after {
      content: "";
      position: absolute;
      top: 2px;
      left: 50%;
      width: 4px;
      height: 26px;
      margin-left: -2px;
      border-radius: 1px;
      background-color: #fff;
    }
  }
}


