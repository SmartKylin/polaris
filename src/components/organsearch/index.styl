.organ--header {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 15px;
  background: #fff;
  .input--wrap {
    flex: 15;
    height: 45px;
    margin-right: 10px;
    background: #edf0f5;
    color: #ccc;
    border-radius: 5px;
    display: flex;
    align-items: center;
    >img {
      width: 18px;
      height: 16px;
      margin: 0 15px;
    }
    >input {
      font-size: 15px;
      width: 100%;
      margin-right: 15px;
      background: #edf0f5;
    }
  }
  .add--organ--icon {
    width: 30px;
    height: 30px;
  }
}
